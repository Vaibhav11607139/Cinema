<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:id="@+id/rl1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        android:background="@drawable/button">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Photograph"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:id="@+id/mntv"
            android:layout_marginLeft="20dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="HINDI |(U/A)"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/mltv"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="190dp"
            android:id="@+id/movieimage"
            android:src="@drawable/photograph"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textColor="@android:color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            android:textSize="15dp"
            android:id="@+id/mdtv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00 AM"
            android:textColor="@android:color/black"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="130dp"
            android:textSize="15dp"
            android:id="@+id/mttv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="125dp"
            android:id="@+id/totalseat"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seat Selected :"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P11"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="135dp"
            android:id="@+id/seatno"
            />

    </RelativeLayout>

  <RelativeLayout
      android:layout_width="340dp"
      android:layout_centerHorizontal="true"
      android:layout_height="wrap_content"
      android:paddingBottom="10dp"
      android:layout_below="@+id/rl1"
      android:layout_marginTop="20dp"
      android:id="@+id/rl2"
      android:background="@drawable/button">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Amount Summary"
          android:textStyle="bold"
          android:textColor="@android:color/black"
          android:textSize="20dp"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="10dp"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Tickets Subtotal"
          android:textColor="@android:color/black"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="40dp"
          android:textSize="15dp"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Rs 250 X"
          android:textSize="13dp"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="75dp"/>

      <TextView
          android:id="@+id/totalseat2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="75dp"
          android:layout_marginTop="75dp"
          android:text="1"
          android:textSize="13dp" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Ticket"
          android:textSize="13dp"
          android:layout_marginLeft="85dp"
          android:layout_marginTop="75dp"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Rs"
          android:textColor="@android:color/black"
          android:textSize="15dp"
          android:textStyle="bold"
          android:layout_marginTop="75dp"
          android:layout_marginLeft="250dp"

          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="100"
          android:textColor="@android:color/black"
          android:textSize="15dp"
          android:textStyle="bold"
          android:layout_marginTop="75dp"
          android:layout_marginLeft="270dp"
          android:id="@+id/matv"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Rs 175 X"
          android:textSize="13dp"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="95dp"/>

      <TextView
          android:id="@+id/totalseat3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="75dp"
          android:layout_marginTop="95dp"
          android:text="1"
          android:textSize="13dp" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Ticket"
          android:textSize="13dp"
          android:layout_marginLeft="85dp"
          android:layout_marginTop="95dp"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Rs"
          android:textColor="@android:color/black"
          android:textSize="15dp"
          android:textStyle="bold"
          android:layout_marginTop="95dp"
          android:layout_marginLeft="250dp"

          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="100"
          android:textColor="@android:color/black"
          android:textSize="15dp"
          android:textStyle="bold"
          android:layout_marginTop="95dp"
          android:layout_marginLeft="270dp"
          android:id="@+id/amount3"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Taxes and Fees"
          android:textColor="@android:color/black"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="115dp"
          android:textSize="15dp"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Convenience Fee and Taxes are 18%"
          android:textSize="13dp"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="150dp"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Rs"
          android:textColor="@android:color/black"
          android:textSize="15dp"
          android:textStyle="bold"
          android:layout_marginTop="150dp"
          android:layout_marginLeft="250dp"

          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="10"
          android:textColor="@android:color/black"
          android:textSize="15dp"
          android:textStyle="bold"
          android:layout_marginTop="150dp"
          android:layout_marginLeft="270dp"
          android:id="@+id/matv2"
          />
  </RelativeLayout>
   <RelativeLayout
       android:layout_width="340dp"
       android:layout_height="wrap_content"
       android:layout_below="@+id/rl2"
       android:background="@drawable/button"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="20dp"
       android:id="@+id/rl3"
       android:paddingBottom="20dp">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Total"
           android:textStyle="bold"
           android:textColor="@android:color/black"
           android:textSize="20dp"
           android:layout_marginLeft="20dp"
           android:layout_marginTop="10dp"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Rs"
           android:textColor="@android:color/black"
           android:textSize="20dp"
           android:textStyle="bold"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="250dp"

           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="110"
           android:textColor="@android:color/black"
           android:textSize="20dp"
           android:textStyle="bold"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="280dp"
           android:id="@+id/matv3"
           />

   </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="50dp"
        android:layout_below="@+id/rl3"
        android:layout_alignParentBottom="true"
        android:text="Proceed to Book Tickets"
        android:layout_marginTop="70dp"
        android:id="@+id/buttonbooktickets"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:background="@drawable/button4"/>







</RelativeLayout>
    </ScrollView>
</RelativeLayout>